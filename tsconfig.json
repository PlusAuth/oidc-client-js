{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "removeComments": false
  },
  "include": ["src"]
}
