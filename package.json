{
  "name": "@plusauth/plusauth-oidc-client-js",
  "description": "OpenID Connect (OIDC) and OAuth2 library for browser based JavaScript applications.",
  "version": "0.0.2",
  "license": "MIT",
  "main": "dist/plusauth-oidc-client.umd.js",
  "module": "dist/plusauth-oidc-client.es.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage --forceExit",
    "build": "bili",
    "docs": "typedoc src/index.ts",
    "lint": "eslint . --ext .ts --fix --quiet",
    "release": "cross-env GITHUB_TOKEN=$GITHUB_TOKEN release-it"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ],
      "scope-case": [
        0
      ]
    }
  },
  "dependencies": {
    "base64-js": "^1.3.1",
    "broadcast-channel": "^3.1.0",
    "isomorphic-unfetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@microsoft/api-extractor": "^7.8.11",
    "@peculiar/webcrypto": "^1.1.2",
    "@release-it/conventional-changelog": "^1.1.4",
    "@rollup/plugin-inject": "^4.0.2",
    "@types/base64-js": "^1.3.0",
    "@types/jest": "^26.0.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "bili": "^5.0.5",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.2",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-typescript-sort-keys": "^1.3.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-junit": "^11.1.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.2.9",
    "pem": "^1.14.4",
    "release-it": "^13.6.6",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-jest": "^26.1.4",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.7"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
