{
  "name": "@plusauth/oidc-client-js",
  "description": "OpenID Connect (OIDC) and OAuth2 library for browser based JavaScript applications.",
  "version": "1.0.0",
  "homepage": "https://github.com/PlusAuth/oidc-client-js",
  "license": "MIT",
  "main": "dist/oidc-client.esm.js",
  "module": "dist/oidc-client.esm.js",
  "browser": "dist/oidc-client.min.js",
  "types": "dist/types.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "test": "jest --forceExit",
    "test:coverage": "jest --coverage --forceExit",
    "build": "rollup -c",
    "docs": "typedoc --tsconfig tsconfig-doc.json src/index.ts",
    "lint": "eslint . --ext .ts --fix --quiet",
    "release": "cross-env GITHUB_TOKEN=$GITHUB_TOKEN release-it",
    "prepare": "husky install"
  },
  "dependencies": {
    "base64-js": "^1.5.1",
    "isomorphic-unfetch": "^3.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@microsoft/api-extractor": "^7.33.5",
    "@peculiar/webcrypto": "^1.4.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/base64-js": "^1.3.0",
    "@types/jest": "^29.2.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/jwt-decode": "^3.1.0",
    "@types/node-fetch": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.26.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^13.0.3",
    "pem": "^1.14.6",
    "release-it": "^15.5.0",
    "rollup": "^3.2.3",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-swc3": "^0.7.0",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.18",
    "typedoc-plugin-merge-modules": "^4.0.1",
    "typescript": "4.8.4",
    "vite": "^3.1.8"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "dev",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "test",
          "types"
        ]
      ],
      "header-max-length": [
        0,
        "always",
        100
      ],
      "scope-case": [
        0
      ]
    }
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
