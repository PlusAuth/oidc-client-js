{
  "name": "@plusauth/oidc-client-js",
  "description": "OpenID Connect (OIDC) and OAuth2 library for browser based JavaScript applications.",
  "version": "1.2.1",
  "homepage": "https://github.com/PlusAuth/oidc-client-js",
  "license": "MIT",
  "main": "./dist/oidc-client.esm.js",
  "module": "./dist/oidc-client.esm.js",
  "browser": "./dist/oidc-client.min.js",
  "types": "./dist/types.d.ts",
  "jsdelivr": "./dist/oidc-client.min.js",
  "unpkg": "./dist/oidc-client.min.js",
  "files": [
    "dist"
  ],
  "keywords": [
    "openid-connect",
    "oidc",
    "oidc client",
    "oauth2",
    "plusauth"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/PlusAuth/oidc-client-js"
  },
  "bugs": {
    "url": "https://github.com/PlusAuth/oidc-client-js/issues"
  },
  "scripts": {
    "test": "jest --forceExit",
    "test:coverage": "jest --coverage --forceExit",
    "build": "rollup -c",
    "docs": "typedoc --tsconfig tsconfig-doc.json src/index.ts",
    "lint": "eslint . --ext .ts --fix --quiet",
    "release": "cross-env GITHUB_TOKEN=$GITHUB_TOKEN release-it",
    "prepare": "husky install"
  },
  "dependencies": {
    "base64-js": "^1.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@microsoft/api-extractor": "^7.34.4",
    "@peculiar/webcrypto": "^1.4.3",
    "@release-it/conventional-changelog": "^5.1.1",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@swc/core": "^1.3.46",
    "@types/base64-js": "^1.3.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/jwt-decode": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-typescript-sort-keys": "^2.3.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsonwebtoken": "^9.0.0",
    "lint-staged": "^13.2.1",
    "pem": "^1.14.7",
    "release-it": "^15.10.1",
    "rollup": "^3.20.2",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-swc3": "^0.8.1",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.24.1",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "whatwg-fetch": "^3.6.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "dev",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "test",
          "types"
        ]
      ],
      "header-max-length": [
        0,
        "always",
        100
      ],
      "scope-case": [
        0
      ]
    }
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
