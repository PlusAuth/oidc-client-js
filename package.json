{
  "name": "@plusauth/plusauth-oidc-client-js",
  "description": "OpenID Connect (OIDC) and OAuth2 library for browser based JavaScript applications.",
  "version": "0.3.0",
  "license": "MIT",
  "main": "dist/plusauth-oidc-client.umd.js",
  "module": "dist/plusauth-oidc-client.es.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage --forceExit",
    "build": "bili",
    "docs": "typedoc src/index.ts",
    "lint": "eslint . --ext .ts --fix --quiet",
    "release": "cross-env GITHUB_TOKEN=$GITHUB_TOKEN release-it"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum":[
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "dev",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "test",
          "types"
        ]
      ],
      "header-max-length": [
        0,
        "always",
        100
      ],
      "scope-case": [
        0
      ]
    }
  },
  "dependencies": {
    "base64-js": "^1.3.1",
    "broadcast-channel": "^3.2.0",
    "isomorphic-unfetch": "^3.1.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@microsoft/api-extractor": "^7.10.4",
    "@peculiar/webcrypto": "^1.1.3",
    "@release-it/conventional-changelog": "^2.0.0",
    "@rollup/plugin-inject": "^4.0.2",
    "@types/base64-js": "^1.3.0",
    "@types/jest": "^26.0.14",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "bili": "^5.0.5",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.2",
    "eslint": "^7.11.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-typescript-sort-keys": "^1.5.0",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "jest-junit": "^12.0.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.4.0",
    "pem": "^1.14.4",
    "release-it": "^14.1.0",
    "rollup-plugin-typescript2": "^0.27.3",
    "ts-jest": "^26.4.1",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
